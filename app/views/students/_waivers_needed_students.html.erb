<h3>Students Need Waivers</h3>
<div>
<% if @waivers_needed_students.empty? %>
 	&nbsp;&nbsp;<em>None at this time</em>
<% else %>
	<table class="table table-striped">
	  <thead>
		<tr>
			<th>Name</th>
			<th>Age</th>
			<th>Rank</th>
			<th>User?</th>
			<th>Active?</th>
			<th>&nbsp;</th>
		</tr>
	  </thead>
	  <tbody>
		<% @waivers_needed_students.each do |student| %>
		  <tr>
			<td><%= link_to student.name, student_path(student) %></td>
			<td><%= student.date_of_birth.nil? ? "---" : student.age  %></td>
			<td><%= rank_name(student.rank)  %></td>
			<td><%= student.user.nil? ? "---" : student.user.email %></td>
			<td><%= student.active ? "Yes" : "No" %></td>
			<td><%= link_to raw("<i class='icon-pencil'></i> Edit"), edit_student_path(student), :class => 'btn btn-mini btn-warning' %></td>
		</tr>
      <% end %>
	  </tbody>
	</table>

	<div class="digg_pagination">
		<!--	<div class="page_info"><%= page_entries_info @waivers_needed_students %></div>		-->
		<%= will_paginate @waivers_needed_students, :param_name => "waiver_page", :container => true, :previous_label => "Previous", :next_label => "Next", :inner_window => 2 %>
	</div>
<% end %>
</div>