<div class="well2">
	<h3>Section Details</h3>
	
	<p><b>Tournament:</b> <%= @section.tournament.name %></p>

	<p><b>Date:</b> <%= @section.tournament.date.strftime("%m/%d/%Y") %></p>

	<p><b>Event:</b> <%= @section.event.name %></p>
	
	<p><b>Rank(s):</b> <%= rank_range_for(@section) %></p>
	
	<p><b>Age(s):</b> <%= age_range_for(@section) %></p>
	
	<p><b>Active:</b> <%= @section.active ? "Yes" : "No" %></p>

	<br>
</div>