<%= simple_form_for @dojo_student, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Membership</legend>
		<!-- if coming from a particular dojo, its dojo.id is being passed in from the controller as well -->
		<%= f.input :dojo_id, :collection => Dojo.active.alphabetical.all %>
		<!-- if coming from a particular student, its student.id is being passed in from the controller as well -->
		<%= f.input :student_id, :collection => Student.active.alphabetical.all %>
		<%= f.input :start_date, :start_year => Date.today.year + 5, :end_year => Date.today.year - 75, :order => [:month, :day, :year] %>
		<%= f.input :end_date, :start_year => Date.today.year + 5, :end_year => Date.today.year - 75, :order => [:month, :day, :year], :include_blank => true %>
		
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', students_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>