<h3>Log In</h3>

<%= form_tag sessions_path do %>
	<div class="control-group">
    	<%= label_tag :email %>
		<div class="controls"><%= text_field_tag :email, params[:email] %></div>
	</div>

	<div class="control-group">
		<%= label_tag :password %>
		<div class="controls"><%= password_field_tag :password %></div>
	</div>

    <div class="form-actions">
		<div class="actions"><%= submit_tag "Log In", :class => 'btn btn-primary' %>
		<%= link_to 'Cancel', home_path, :class => 'btn' %></div>
	</div>
<% end %>