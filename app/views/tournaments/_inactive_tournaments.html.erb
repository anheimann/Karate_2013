<% if @inactive_tournaments.empty? %>
	<p><em>No tournaments currently in the system.</em></p>
<% else %>
	<table class="table table-striped">
		 <thead>
			<tr>
				<th class="centered">Date</th>
				<th width="250">Name</th>
				<th class="centered">Minimum Rank</th>
				<th class="centered">Maximum Rank</th>
			</tr>
		</thead>
		<tbody>
		  <% @inactive_tournaments.reverse.each do |tournament| %>
            <tr>
				<td><%= tournament.date.strftime("%m/%d/%Y") %></td>
				<td><%= link_to tournament.name, tournament_path(tournament) %></td>
				<td><%= rank_name(tournament.min_rank) %></td>
				<td><%= tournament.max_rank.nil? ? "Senior Master" : rank_name(tournament.max_rank) %></td>
				<td class="centered">
					<%= link_to raw("<i class='icon-pencil'></i> Edit"), edit_tournament_path(tournament), :class => 'btn btn-mini btn-warning' %></td>
			</tr>
		  <% end %>
		</tbody>
	</table>
<% end %>
<br>

<div class="digg_pagination">
	<!-- <div class="page_info"><%= page_entries_info @inactive_tournaments %></div>		-->
	<%= will_paginate @inactive_tournaments, :container => true, :previous_label => "Previous", :next_label => "Next", :inner_window => 2 %>
</div>


