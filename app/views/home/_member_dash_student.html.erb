<!-- identical to information in students/_student_details.html.erb -->
<div class="well1">
	<h3>Student Details</h3>
	<p>
		<!-- changed from:  <h4>Name: <%= @student.name %></h4>    to:-->
		<b>Name:</b> <%= @student.name %></p>
	
	<p><b>Rank:</b> <%= rank_name(@student.rank) %></p>
	
	<p><b>Date of Birth:</b> <%= @student.date_of_birth.strftime("%m/%d/%y") %></p>
	
	<p><b>Phone:</b> <%= number_to_phone @student.phone unless @student.phone.nil? %></p>
	
	<p><b>Waiver Signed:</b> <%= @student.waiver_signed ? "Yes" : "No" %></p>
	
	<p><b>Active:</b> <%= @student.active ? "Yes" : "No" %></p>
	
	<% if !@student.user.nil? %>
		<% if logged_in? && (current_user.role? :admin) %>
			<p><b>User role: </b> <%= role_name(@student.user.role) %></p>
		<% end %>
		<p><b>User email: </b><%= @student.user.email %></p>
	<% end%>
	<br>
</div>